{
  "name": "magiceyes",
  "version": "0.1.0",
  "description": "Give your code assistant eyes - Visual context for AI coding assistants",
  "type": "module",
  "bin": {
    "magiceyes": "index.js"
  },
  "files": [
    "index.js",
    "dist/mcp-server.js",
    "dist/bridge.js",
    "README.md"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts",
    "build:extension": "tsx scripts/build.ts --target=extension",
    "build:server": "tsx scripts/build.ts --target=server",
    "dev:extension": "tsx scripts/build.ts --target=extension --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "package:extension": "cd dist/extension && zip -r ../../magiceyes-extension.zip .",
    "test:server": "node index.js --server",
    "test:setup": "node index.js",
    "sync:version": "node scripts/sync-version.js",
    "prepublishOnly": "node scripts/sync-version.js && pnpm run build",
    "version:bump": "npm version patch && pnpm sync:version",
    "version:minor": "npm version minor && pnpm sync:version",
    "version:major": "npm version major && pnpm sync:version"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "ai-assistant",
    "chrome-extension",
    "screenshot",
    "visual-context",
    "cursor",
    "copilot"
  ],
  "author": "Rory",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rorz/magiceyes.git"
  },
  "bugs": {
    "url": "https://github.com/rorz/magiceyes/issues"
  },
  "homepage": "https://magiceyes.dev",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "esbuild": "^0.19.11",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
